<%= form_with(model: item) do |form| %>
  <% if item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block", class: "form-label"%>
    <%= form.text_field :name, class: "form-control mb-2" %>
  </div>

  <div class="form-check">
    <%= form.label :active, class: "form-check-label" %>
    <%= form.check_box :active, class: "form-check-input" %>
  </div>

  <div class="form-check mb-3">
    <%= form.label :borrowed, class: "form-check-label" %>
    <%= form.check_box :borrowed, class: "form-check-input"%>
  </div>

  <div class="form-label mb-3">
    <%= form.label :item_type, class: 'form-label' %>
    <%= form.select :item_type, Item.item_types.keys,
                    {:include_blank => "Select item type..."}, class: 'form-select'%>
  </div>

  <div>
    <%= form.submit class: 'btn btn-success'%>
  </div>
<% end %>
